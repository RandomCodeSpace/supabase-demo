{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noAutofocus": {
					"level": "error",
					"fix": "safe"
				},
				"noSvgWithoutTitle": "off",
				"noStaticElementInteractions": "off",
				"useButtonType": "off",
				"useKeyWithClickEvents": "off",
				"noLabelWithoutControl": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": {
					"level": "error",
					"fix": "safe"
				},
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				},
				"noUnusedVariables": {
					"level": "error",
					"fix": "safe"
				}
			},
			"style": {
				"useTemplate": {
					"level": "error",
					"fix": "safe"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
